<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HalUtama">

    <TextView
        android:id="@+id/hal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Halo, Sugar!"
        android:fontFamily="@font/intersemibold"
        android:textColor="@color/oren"
        android:textSize="40dp"
        android:inputType="text|textMultiLine"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"

        />

    <ImageView
        android:id="@+id/button2"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_below="@id/hal"
        android:background="@drawable/sb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:id="@+id/pilih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/button2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:id="@+id/care"
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:background="@drawable/care"
            />
        <Button
            android:id="@+id/shop"
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:background="@drawable/shop"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/rekom"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/pilih"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:inputType="text"
        android:text="Rekomendasi"
        android:fontFamily="@font/intersemibold"
        android:textColor="@color/abuuu"
        android:textSize="14dp"

        />

    <ScrollView
        android:id="@+id/sv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rekom"
        >

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/rekom1"
                android:layout_width="120dp"
                android:layout_height="140dp"
                >
                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rekom1"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="PRO PLAN CAT ADULT Chicken 85 gr RP15.000"
                        android:textSize="10dp"
                        android:fontFamily="@font/intersemibold"
                        android:inputType="text|textMultiLine"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/rekom2"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_marginLeft="15dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rekom2"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Kalung Kucing Lonceng RP4.000"
                        android:textSize="10dp"
                        android:fontFamily="@font/intersemibold"
                        android:inputType="text|textMultiLine"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/rekom3"
                android:layout_width="120dp"
                android:layout_height="140dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rekom3"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Royal Canin Cardiac Wetfood 430 gr RP4.000"
                        android:textSize="10dp"
                        android:fontFamily="@font/intersemibold"
                        android:inputType="text|textMultiLine"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/femes"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/sv1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:inputType="text"
        android:text="Banyak Dikunjungi"
        android:fontFamily="@font/intersemibold"
        android:textColor="@color/abuuu"
        android:textSize="14dp" />

    <ScrollView
        android:id="@+id/sv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/femes"

        >

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            >

            <Button
                android:id="@+id/fem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/femes1"
                />
            <Button
                android:id="@+id/fem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/femes2"
                android:layout_marginLeft="10dp"
                />
            <Button
                android:id="@+id/fem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/femes3"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>