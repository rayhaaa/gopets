<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cover1">

    <ImageView
        android:id="@+id/gb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/paw1"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/gpt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/gb1"
        android:text="GoPet's"
        android:fontFamily="@font/interbold"
        android:textSize="18dp"
        android:textColor="@color/abuu"
        />

    <ImageView
        android:id="@+id/gb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@id/gpt"
        android:src="@drawable/gb1"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/teks"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/gb2"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:inputType="textMultiLine"
        android:text="Temukan layanan perawatan untuk hewan peliharaan Anda "
        android:fontFamily="@font/intersemibold"
        android:textSize="18dp"

        />

    <Button
        android:id="@+id/ljt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teks"
        android:layout_marginTop="70dp"
        android:background="@drawable/lanjut"
        android:layout_centerHorizontal="true"

        />

</RelativeLayout>